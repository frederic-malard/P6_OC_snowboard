{% extends 'base.html.twig' %}

{% block title %}commentaires signalés{% endblock %}

{% block body %}

<div class="container jumbotron">

    <h1 class="text-center mb-5">
        commentaires signalés
    </h1>

    {# liste des commentaires signalés #}

    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    nom figure
                </th>
                <th>
                    login utilisateur
                </th>
                <th>
                    date commentaire
                </th>
                <th>
                    contenu commentaire
                </th>
                <th>
                    R.A.S
                </th>
                <th>
                    supprimer
                </th>
            </tr>
        </thead>
        {% for commentaire in commentaires %}
            <tr>
                <td>
                    {{ commentaire.figure.nom }}
                </td>
                <td>
                    {{ commentaire.auteur.login }}
                </td>
                <td>
                    {{ commentaire.getDateCreationString }}
                </td>
                <td>
                    {{ commentaire.contenu }}
                </td>
                <td class="text-center">
                    <a href="{{ path("valider_commentaire", {"idCommentaire" : commentaire.id}) }}" class="text-success" onclick="return confirm('Valider le commentaire suivant ?\n\n{{ commentaire.contenu }}')">
                        <i class="fas fa-check"></i>
                    </a>
                </td>
                <td class="text-center">
                    <a href="{{ path("supprimer_commentaire_via_liste", {"idCommentaire" : commentaire.id}) }}" class="text-danger" onclick="return confirm('Voulez vous vraiment supprimer le commentaire suivant ?\n\n{{ commentaire.contenu }}')">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
    </table>

</div>

{% endblock %}