{% extends 'base.html.twig' %}

{% block title %}vos figures{% endblock %}

{% block body %}

<div class="container jumbotron">
    <h1 class="text-center mb-5">
        Les figures que vous avez publiées
    </h1>

    <p class="text-center">
        {% if figures|length == 0 %}
            Vous n'avez publié aucune figure.
        {% else %}
            {% for figure in figures %}
                <a href="{{ path("figure_affichage", {"slug" : figure.slug}) }}">
                    {{ figure.nom }}
                </a>
                <br>
            {% endfor %}
        {% endif %}
    </p>
</div>

{% endblock %}