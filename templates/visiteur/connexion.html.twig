{% extends 'base.html.twig' %}

{% block title %}connexion{% endblock %}

{% block body %}

    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté avec le login {{ app.user.username }}, <a href="{{ path('deconnexion') }}">Déconnexion</a>
        </div>
    {% endif %}

    <div class="container row">

        <div class="col-md-3">
            &nbsp;
        </div>

        <div class="col-md-6 bg-light p-3 mt-5">

            <h1 class="text-center my-3">
                Connexion
            </h1>

            <form method="post">

                <div class="form-group">
                    <label for="inputLogin">
                        login
                    </label>
                    <input type="text" class="form-control" name="login" id="inputLogin" value="{{ last_username }}" required autofocus>
                </div>

                <div class="form-group">
                    <label for="inputPassword">
                        mot de passe
                    </label>
                    <input type="password" class="form-control" name="password" id="inputPassword" required>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html
                #}

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Se souvenir de moi
                    </label>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        Connexion
                    </button>
                </div>
            </form>
        </div>
    </div>

{% endblock %}
