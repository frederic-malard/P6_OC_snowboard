{% extends 'base.html.twig' %}

{% block title %}connexion{% endblock %}

{% block body %}

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="container row">

        <div class="col-md-3">
            &nbsp;
        </div>

        <div class="col-md-6 bg-light p-3 mt-5">

            <h1 class="text-center my-3">
                Connexion
            </h1>

            <form action="{{ path("login") }}" method="post">

                <div class="form-group">
                    <label for="login">
                        login
                    </label>
                    <input type="text" class="form-control" name="_username" id="login" placeholder="Votre login..." required>
                </div>

                <div class="form-group">
                    <label for="motDePasse">
                        mot de passe
                    </label>
                    <input type="password" class="form-control" name="_password" id="motDePasse" placeholder="Votre mot de passe..." required>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        Connexion
                    </button>
                </div>
            </form>
        </div>
    </div>

{% endblock %}
