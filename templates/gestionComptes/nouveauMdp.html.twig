{% extends 'base.html.twig' %}

{% block title %}nouveau mot de passe{% endblock %}

{% block body %}

    <div style="max-width : 500px;" class="container jumbotron mt-5">
        <h5 class="text-center mb-4">
            Veuillez entrer un nouveau mot de passe pour le compte {{ utilisateur.login }}
        </h5>
        <form action="" method="post">
            <div class="form-group mb-5">
                <label for="motDePasse">
                    mot de passe
                </label>
                <input type="password" name="motDePasse" id="motDePasse" class="form-control">
            </div>
            <div class="form-group mb-5">
                <label for="confirmation">
                    confimation du mot de passe
                </label>
                <input type="password" name="confirmation" id="confirmation" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary d-block m-auto">
                Changer le mot de passe
            </button>
        </form>
    </div>

{% endblock %}