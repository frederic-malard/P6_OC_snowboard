<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>snowtricks - {% block title %}{% endblock %}</title>
        <link rel="stylesheet" href="/css/spacelab.min.css">
        <link rel="stylesheet" href="/css/perso.css">
        <link rel="stylesheet" href="/css/fontAwesomeAll.css">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
    
        <nav class="navbar navbar-expand-lg navbar-light bg-light">

            <a class="navbar-brand" href="{{ path("accueil") }}">SnowTricks</a>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor03">
                <ul class="navbar-nav ml-auto">
                    {% if app.user and "ROLE_MODO" in app.user.roles %}
                        <li class="nav-item">
                            <a href="{{ path("consulter_signales") }}" class="nav-link">
                                commentaires signalés
                            </a>
                        </li>
                    {% endif %}
                    {% if app.user and "ROLE_ADMIN" in app.user.roles %}
                        <li class="nav-item">
                            <a href="{{ path("menu_admin") }}" class="nav-link">
                                administration comptes
                            </a>
                        </li>
                    {% elseif app.user and "ROLE_MODO" in app.user.roles %}
                        <li class="nav-item">
                            <a href="{{ path("gestion_utilisateurs") }}" class="nav-link">
                                modération comptes
                            </a>
                        </li>
                    {% endif %}
                    {#{% if path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) == path('accueil') %}
                        <li class="nav-item active">
                    {% else %}#}
                    <li class="nav-item">
                    {#{% endif %}#}
                        <a class="nav-link" href="{{ path("accueil") }}">
                            accueil
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path("accueil", {"_fragment" : "tricks"}) }}" class="nav-link">
                            tricks
                        </a>
                    </li>
                    {% if app.user %}
                        <li class="nav-item">
                            <a href="{{ path("deconnexion") }}" class="nav-link">
                                déconnexion
                            </a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a href="{{ path("connexion") }}" class="nav-link">
                                connexion
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="{{ path("app_register") }}" class="nav-link">
                                inscription
                            </a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </nav>

        {% for label, messages in app.flashes %}
            <div class="container alert alert-{{ label }} m-3">
                {% for message in messages %}
                    <p>
                        {{ message }}
                    </p>
                {% endfor %}
            </div>
        {% endfor %}

        {% block body %}{% endblock %}

        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>

        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>

        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

        <script src="/js/fontAwesomeAll.js"></script>

        {% block javascripts %}{% endblock %}
    </body>
</html>
